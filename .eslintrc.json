{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "airbnb-typescript/base",
    "plugin:jest/recommended"
  ],
  "ignorePatterns": ["dist"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint",
    "jest"
  ],
  "root": true,
  "rules": {
    // https://github.com/typescript-eslint/typescript-eslint/issues/3712
    "@typescript-eslint/no-throw-literal": "off"
  }
}
